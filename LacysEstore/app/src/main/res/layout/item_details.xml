<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:background="#ffffff" android:orientation="vertical">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="367dp" android:id="@+id/LinearLayoutHeader"
        android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemImageView"
            android:adjustViewBounds="true" android:scaleType="fitXY"
            android:src="@drawable/mdesignerhoodie" android:layout_margin="5dip"/>>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemTitleView"
            android:layout_gravity="center" android:layout_margin="5dip"
            android:textSize="35dip"
            android:textColor="#000000"/>

    </LinearLayout>
    <TextView android:layout_height="wrap_content" android:id="@+id/itemDescView"
        android:layout_width="fill_parent" android:layout_margin="5dip"
        android:layout_weight="1" android:textColor="#000000" android:text="Product description"/>

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/dPriceView"
        android:layout_gravity="right" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="5dip"
        android:layout_gravity="right" android:id="@+id/ButtonAddToCart"
        android:text="@string/addcart"/>>
</LinearLayout>